# $Id: Makefile.in,v 1.4 2005-10-13 05:37:16 hww3 Exp $
@make_variables@
VPATH=@srcdir@:@srcdir@/../..:../..

OBJS=

MODDIR=Public.pmod/Tools.pmod/
MODNAME=ConfigFiles
AUTODOC_SRC_IN=
MODULE_NAME=Public.Tools.ConfigFiles
MODULE_DIR_NAME=Public_Tools_ConfigFiles
MODULE_LICENSE=GPL/LGPL/MPL

# we shouldn't need to do anything to the rest of the file.

CFLAGS=@CMOD_CFLAGS@
LDFLAGS=@CMOD_LIBS@

MODULE_LDFLAGS=@LDFLAGS@

CONFIG_HEADERS=@CONFIG_HEADERS@

@dynamic_module_makefile@
@dependencies@

release:
	svn copy -m "tagging project" http://wush.net/svn/hww3/trunk http://wush.net/svn/hww3/tags/Public_Tools_ConfigFiles_RELEASE_1_${MIN}
	svn export http://wush.net/svn/hww3/tags/Public_Tools_ConfigFiles_RELEASE_1_${MIN}/pike_modules/Public_Tools_ConfigFiles Public_Tools_ConfigFiles-1.${MIN}
	cd ${MODULE_DIR_NAME}-1.${MIN} && \
	pike -x module --autoheader && pike -x module --autoconf && \
	rm -rf autom4*
	tar czvf ${MODULE_DIR_NAME}-1.${MIN}.tar.gz  ${MODULE_DIR_NAME}-1.${MIN}
	pike upload_module_version.pike ${MODULE_NAME} 1.${MIN} "${MODULE_LICENSE}"
